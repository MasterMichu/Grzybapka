#:include MushroomMapview.kv
#:include FilterChoice.kv
#:include Configure.kv
#:include RecordMushrooms.kv




<Publish>:
    name: "publish"
    Button:
        text:"go back"
        on_release: 
            app.root.current="main"
            root.manager.transition.direction="right"
<Mainwindow>:
    name: "main"
    id: main
    GridLayout:
        id: grid
        cols: 1
        GridLayout:
            id: grid2
            cols: 4
            size_hint: 1, 0.1  # Set the height to 10% of the screen height

            Button:
                text: "apply filters"
                font_size: 12
                size_hint: 0.25, 1  # 25% width of the parent layout
                on_release: 
                    app.root.current= "filter"
                    root.manager.transition.direction="left"

            Button:
                text: "Configure"
                font_size: 12
                size_hint: 0.25, 1
                on_release: 
                    app.root.current= "configure"
                    root.manager.transition.direction="left"
            Button:
                text: "Record"
                font_size: 12
                size_hint: 0.25, 1
                on_release: 
                    app.root.current= "record"
                    root.manager.transition.direction="left"
            Button:
                text: "Publish"
                font_size: 12
                size_hint: 0.25, 1
                on_release: 
                    app.root.current= "publish"
                    root.manager.transition.direction="left"
        MushroomMapview:
            size_hint: 1, 0.8
            id: mapview
